.container {
  height: 100%;
} 

.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 90%;
}

.menu {
    height: 5%;
    margin: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #eee;
}

.list{
  width: 100%; 
  height: 100%;
}
.synopsis{
  width: 100%;
  height: 40%;
  background-color: rgba(0, 0, 0, .7);
  display: flex;
  justify-content: space-between;
  padding-top: 50rpx;
  
}

.synopsis_txt{
  color: #fff;
  padding-left: 50rpx;
}

.synopsis_txt .english_name{
  font-size: 25rpx;
  color: #ccc;
  display: block;
}

 .synopsis_txt .some{
   margin-top: 40rpx;
} 

.cate{
  font-size: 25rpx;
  color: #ccc;
  
}

.country,.time{
  display: block;
  font-size: 25rpx;
  color: #ccc;
  margin: 20rpx 0;
}

.rating{
  font-size: 35rpx;

}

.rating .number{
  font-size: 45rpx;
  color:orange;
}

.rating_count{
  font-size: 25rpx;
  color: #ccc;
}

.synopsis_pic{
  width:32%;
  height:65%;
  padding:169rpx 50rpx 0 0;
}

.synopsis_pic image {
  width: 100%;
  height: 100%;
}


.summary{
  width: 87%;
  height: 35%;
  /* background-color: #eee; */
  padding: 50rpx 50rpx 50rpx 50rpx;
  font-size: 33rpx;
  border-bottom: 5px solid #eee;
}

.casts{
  padding-left: 50rpx;
  width:100%;
  height: 500rpx;
}
.casts text{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  
}

.casts .casts_message{
  width: 100%;
  height: 500prx;
  white-space: nowrap;
  display: flex;
}

.cast_message{
  width: 250rpx;
  height: 500rpx;
  display: inline-block;
  font-size: 25rpx;
  margin-right: 10rpx;
  vertical-align: center;
}

.casts .casts_message image{
  width: 250rpx;
  height: 300rpx;
}

.casts .casts_message text{
  display: block;
}
